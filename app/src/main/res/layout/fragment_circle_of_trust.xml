<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background_fragment_circle_of_trust"
    tools:context="com.peacecorps.pcsa.circle_of_trust.CircleOfTrustFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_normal"
            android:textColor="@color/intro_text_color"
            android:text="CIRCLE OF TRUST"
            />
        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="@dimen/circle_of_trust_width"
            android:layout_height="@dimen/circle_of_trust_height"
            android:textColor="@color/fragment_of_trust_text_color"
            android:src="@mipmap/ic_edit_button"
            android:textSize="@dimen/text_normal"
            android:background="@drawable/btn_rounded_rectangle"
            android:text="Com 4"
            android:layout_marginRight="@dimen/circle_of_trust_marginRight"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <com.peacecorps.pcsa.circle_of_trust.CircularImageView
                android:id="@+id/com1Button"
                android:layout_width="@dimen/circle_of_trust_width"
                android:layout_height="@dimen/circle_of_trust_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:textSize="@dimen/text_normal"
                android:text="CM 1"
                android:src="@mipmap/ic_comrade"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                android:layout_marginLeft="@dimen/zero"
                app:border="true"
                app:border_color="@color/photo_border"
                app:border_width="@dimen/photo_border_width"/>
            <com.peacecorps.pcsa.circle_of_trust.CircularImageView
                android:id="@+id/com2Button"
                android:layout_width="@dimen/circle_of_trust_width"
                android:layout_height="@dimen/circle_of_trust_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:text="CM 2"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                android:layout_marginLeft="@dimen/circle_of_trust_marginLeft"
                app:border="true"
                app:border_color="@color/photo_border"
                app:border_width="@dimen/photo_border_width"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <com.peacecorps.pcsa.circle_of_trust.CircularImageView
                android:id="@+id/com6Button"
                android:layout_width="@dimen/circle_of_trust_width"
                android:layout_height="@dimen/circle_of_trust_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                app:border="true"
                app:border_color="@color/photo_border"
                app:border_width="@dimen/photo_border_width"
               />

            <ImageButton
                android:id="@+id/requestButton"
                android:layout_width="@dimen/circle_of_trust_image_width"
                android:layout_height="@dimen/circle_of_trust_image_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:background="@mipmap/ic_help_me"
                android:text="Request Help"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                android:layout_marginLeft="@dimen/circle_of_trust_marginLeft_40"/>
            <com.peacecorps.pcsa.circle_of_trust.CircularImageView
                android:id="@+id/com3Button"
                android:layout_width="@dimen/circle_of_trust_width"
                android:layout_height="@dimen/circle_of_trust_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:text="Com 3"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                android:layout_marginLeft="@dimen/circle_of_trust_marginLeft_40"
                app:border="true"
                app:border_color="@color/photo_border"
                app:border_width="@dimen/photo_border_width"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <com.peacecorps.pcsa.circle_of_trust.CircularImageView
                android:id="@+id/com5Button"
                android:layout_width="@dimen/circle_of_trust_width"
                android:layout_height="@dimen/circle_of_trust_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:text="Com 5"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                app:border="true"
                app:border_color="@color/photo_border"
                app:border_width="@dimen/photo_border_width"/>
            <com.peacecorps.pcsa.circle_of_trust.CircularImageView
                android:id="@+id/com4Button"
                android:layout_width="@dimen/circle_of_trust_width"
                android:layout_height="@dimen/circle_of_trust_height"
                android:textColor="@color/fragment_of_trust_text_color"
                android:src="@mipmap/ic_comrade"
                android:textSize="@dimen/text_normal"
                android:text="Com 4"
                android:layout_marginTop="@dimen/circle_of_trust_width"
                android:layout_marginLeft="@dimen/circle_of_trust_marginLeft"
                app:border="true"
                app:border_color="@color/photo_border"
                app:border_width="@dimen/photo_border_width"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
